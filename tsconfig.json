{
    "compilerOptions": {
      /* Basic */
      "target": "es2020",
      "module": "CommonJS",
      "lib": ["es2020", "ESNext", "DOM"],

      /* Modules Resolution */
      "moduleResolution": "node",
      "esModuleInterop": true,

      /* Paths Resolution */
      "baseUrl": "./",
      "paths": {
        "@flipcards/*": ["packages/*"]
      },

      /* Advanced */
      "jsx": "react",
      "experimentalDecorators": true,
      "resolveJsonModule": true
    },
    "exclude": ["node_modules", "**/node_modules/*", "dist"]
}